# ZION.CITY Environment Configuration
# Copy this file to .env and update the values as needed

# MongoDB Configuration
MONGO_PASSWORD=your_secure_mongo_password
MONGO_URL=mongodb://zion_admin:your_secure_mongo_password@mongodb:27017/zion_city?authSource=admin

# JWT Configuration
JWT_SECRET_KEY=your_secure_jwt_secret_key_here

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Debug Mode (set to True for development)
DEBUG=False

# Environment (development/production)
ENVIRONMENT=production

# LLM API Keys (optional)
EMERGENT_LLM_KEY=your_emergent_llm_key
DEEPSEEK_API_KEY=your_deepseek_api_key

# CORS Configuration
# For production with same domain (zioncity.app), use the full URL
CORS_ORIGINS=https://zioncity.app

# Admin Credentials
ADMIN_USERNAME=Architect
ADMIN_PASSWORD=your_secure_admin_password
