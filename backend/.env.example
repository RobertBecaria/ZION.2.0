# ============================================================
# ZION.CITY Backend Environment Configuration
# ============================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
# ============================================================

# Environment Mode
ENVIRONMENT=production

# ============================================================
# DATABASE (Required)
# ============================================================
# MongoDB connection string
MONGO_URL=mongodb://zion_admin:YOUR_MONGO_PASSWORD@localhost:27017/zion_city?authSource=admin
DB_NAME=zion_city

# ============================================================
# SECURITY (Required - CHANGE THESE!)
# ============================================================
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_ME_generate_with_openssl_rand_hex_32

# ============================================================
# ADMIN PANEL (Required for admin access)
# ============================================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_use_strong_password_min_16_chars

# ============================================================
# AI SERVICES (Required for ERIC assistant)
# ============================================================
DEEPSEEK_API_KEY=sk-your-deepseek-api-key
EMERGENT_LLM_KEY=your-emergent-universal-key

# ============================================================
# CORS (Required for production)
# ============================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================================
# OPTIONAL SETTINGS
# ============================================================
# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Performance tuning
GUNICORN_WORKERS=13
GUNICORN_THREADS=4

# MongoDB password (for docker-compose)
MONGO_PASSWORD=YOUR_SECURE_MONGO_PASSWORD
